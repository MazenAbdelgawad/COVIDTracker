<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".view.activites.HomeActivity">

    <TextView
        android:layout_width="237dp"
        android:layout_height="74dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/title"
        android:textColor="#D3D8EC"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/day_id"
        android:layout_width="68dp"
        android:layout_height="54dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="@string/day"
        android:textColor="#B0DA6E"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/year_id"
        android:layout_width="69dp"
        android:layout_height="25dp"
        android:layout_marginTop="-3dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/year"
        android:textColor="#D3D8EC"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/month_id"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/month_id"
        app:layout_constraintTop_toBottomOf="@+id/month_id" />

    <TextView
        android:id="@+id/month_id"
        android:layout_width="71dp"
        android:layout_height="26dp"
        android:gravity="center"
        android:text="@string/month"
        android:textColor="#D3D8EC"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/day_id"
        app:layout_constraintTop_toBottomOf="@+id/day_id" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="414dp"
        android:layout_height="80dp"
        android:layout_marginTop="12dp"
        app:cardBackgroundColor="#00FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/year_id">

        <include
            layout="@layout/card_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="407dp"
        android:layout_height="425dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView" />

</androidx.constraintlayout.widget.ConstraintLayout>